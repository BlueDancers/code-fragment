.show-btn {
    margin-top: 100rpx;
    color: #22cc22;
}

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    /* opacity: 0; */
    opacity: 0.5;
    overflow: hidden;
    z-index: 1000;
    color: #ffffff;
    animation: isShow 0.2s ease 0s 1 normal forwards;
}
@keyframes isShow {
    from {
        opacity: 0;
    }
    to {
        opacity: 0.5;
    }
}

.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 10000;
    background-color: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 18rpx;
    opacity: 0;
    animation: isShowModal 0.4s ease 0s 1 normal forwards;
}

@keyframes isShowModal {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

.modal-title {
    padding-top: 50rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
}

.modal-content {
    padding: 50rpx 32rpx;
}

.modal-footer {
    display: flex;
    align-items: center;
    height: 90rpx;
    font-size: 34rpx;
    line-height: 86rpx;
    border-top: 1rpx solid #dedede;
}

.btn-cancel {
    width: 50%;
    height: 90rpx;
    color: #666;
    text-align: center;
    border-radius: 0;
    border: none;
    border-right: 1rpx solid #dedede;
}

.btn-confirm {
    width: 50%;
    line-height: 90rpx;
    color: #ec5300;
    text-align: center;
    border-radius: 0;
    border: none;
}

button::after {
    border-radius: 0;
    border: none
}